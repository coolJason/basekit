<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/iconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_12"
        android:gravity="center" />

    <TextView
        android:layout_marginLeft="@dimen/dp_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iconView"
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="平台福利"/>

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ll_no_voucher"
        android:id="@+id/tv_selected"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_20"
        android:gravity="right"
        android:textColor="@color/red_FA4C41"
        android:textSize="@dimen/sp_24"
        tools:text="优惠券"
        />



    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/valueView"
        android:id="@+id/ll_no_voucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_no_voucher_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_999999"
            tools:text="25"
            android:textSize="@dimen/sp_28" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_share"
            android:layout_width="@dimen/dp_97"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_6"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20" />

    </LinearLayout>

    <TextView
        android:layout_marginLeft="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/valueView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="25"/>

</androidx.constraintlayout.widget.ConstraintLayout>