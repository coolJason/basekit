<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_32"
    android:paddingBottom="@dimen/dp_0">


    <androidx.cardview.widget.CardView
        android:id="@+id/facebookLoginView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        app:cardCornerRadius="@dimen/dp_40">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_black10"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                app:srcCompat="@drawable/ic_facebook" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_32"
                android:text="Login With Facebook"
                android:textColor="@color/color_black70"
                android:textSize="@dimen/sp_35"
                android:fontFamily="@font/libre_bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/twitterLoginView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_32"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/dp_40">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white70"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                app:srcCompat="@drawable/ic_facebook" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_32"
                android:gravity="left"
                android:text="Login With Twitter"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_35"
                android:fontFamily="@font/libre_bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/googleLoginView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_32"
        app:cardCornerRadius="@dimen/dp_40">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_black10"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                app:srcCompat="@drawable/ic_google" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_32"
                android:text="Login With Google"
                android:textColor="@color/color_black70"
                android:textSize="@dimen/sp_35"
                android:fontFamily="@font/libre_bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/playGameLoginView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_32"
        app:cardCornerRadius="@dimen/dp_40">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_black10"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:src="@drawable/ic_play_game" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_32"
                android:text="Login With PlayGame"
                android:textColor="@color/color_black70"
                android:textSize="@dimen/sp_35"
                android:fontFamily="@font/libre_bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>