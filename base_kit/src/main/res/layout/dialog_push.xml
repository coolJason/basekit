<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_solid_white_r30">
    <ImageView
        android:id="@+id/iv_finish"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:src="@drawable/ic_finish_gray">
    </ImageView>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_image"
        android:layout_marginTop="@dimen/dp_29"
        android:layout_marginLeft="@dimen/dp_25"
        android:paddingBottom="@dimen/dp_33"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_75"
        app:shapeAppearanceOverlay="@style/circleImageStyle"
        tools:src="@drawable/ic_merchant_push_icon"
        app:strokeColor="@color/white"
        app:strokeWidth="@dimen/dp_4"></com.google.android.material.imageview.ShapeableImageView>
    <TextView
        android:id="@+id/tv_title"
        app:layout_constraintTop_toTopOf="@+id/iv_image"
        app:layout_constraintLeft_toRightOf="@+id/iv_image"
        android:layout_marginRight="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_28"
        tools:text="新订单提醒！"
        android:textColor="@color/black_3"
        android:textSize="@dimen/sp_35"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/tv_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintLeft_toRightOf="@+id/iv_image"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_28"
        tools:text="您有新的订单，请您及时处理！"
        android:textColor="@color/black_3"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/sp_35"
        android:layout_width="0dp"
        android:layout_height="wrap_content"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

