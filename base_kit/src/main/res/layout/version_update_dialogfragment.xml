<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_125"
        android:layout_marginRight="@dimen/dp_125"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_248"
        android:background="@drawable/ic_version_bg"
        ></ImageView>
    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_finish"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_white_finish"></ImageView>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_58"
        android:layout_marginLeft="@dimen/dp_38"
        android:textSize="@dimen/dp_40"
        tools:text="发现新版本"></TextView>
    <TextView
        android:id="@+id/tv_version_name"
        android:layout_below="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_5"
        android:textSize="@dimen/sp_28"
        android:textColor="@color/white"
        tools:text="v2.0.31"></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_125"
        android:layout_marginRight="@dimen/dp_125"
        android:background="@drawable/bg_solid_r30_bottom_white">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedscrollview"
            android:layout_marginTop="@dimen/dp_27"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_38"
            android:layout_marginRight="@dimen/dp_43"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >
            <TextView
                android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:minHeight="@dimen/dp_200"
                android:maxHeight="@dimen/dp_250"
                android:lineSpacingExtra="@dimen/dp_5"
                android:textSize="@dimen/sp_28"
                android:textColor="@color/black_3"
                tools:text="修复了一些BUG\n
优化了启动速度\n
优化了一部分UI界面\n
新增了吃饭不要钱还有奖品拿的功能"></TextView>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:layout_below="@+id/nestedscrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_45"
            android:orientation="vertical">
            <com.moregood.kit.widget.MyProgress
                android:visibility="gone"
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:progressDrawable="@drawable/progressbar_horizontal"
                ></com.moregood.kit.widget.MyProgress>
            <TextView
                android:id="@+id/tv_update"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_20"
                android:paddingTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="立即升级"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_30"
                android:background="@drawable/bg_solid_22bb9b_r45"
                ></TextView>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_no_update"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_20"
                android:paddingTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="暂不升级"
                android:textColor="@color/gray6"
                android:textSize="@dimen/sp_30"
                android:background="@drawable/bg_stoke_cccccc_r45"
                android:layout_below="@+id/tv_update"
                ></TextView>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>